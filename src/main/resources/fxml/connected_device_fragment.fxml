<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<HBox fx:controller="pccontroller.ConnectedDeviceFragmentController" alignment="CENTER" layoutX="29.0" layoutY="159.0" style="-fx-background-color: green;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0">
            <children>
                <Text fx:id="deviceFullName" strokeType="OUTSIDE" strokeWidth="0.0">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Text>
            </children>
        </HBox>
        <Button onMouseClicked="#clickCloseConnectionButton" fx:id="closeConnectionButton" mnemonicParsing="false" style="-fx-background-color: #dc3545;" text="Close connection" textFill="WHITE">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <cursor>
                <Cursor fx:constant="CLOSED_HAND" />
            </cursor>
        </Button>
    </children>
</HBox>
